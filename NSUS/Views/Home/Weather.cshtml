@model WeatherModels.TemperatureModel
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript">
</script>
@{
    ViewData["Title"] = "Weather Report";
}
@using (Html.BeginForm("Weather", "Home"))
{    
    <div id="searchdata" class="searchdata">
        <input id="txtCity" type="text" placeholder="Enter City Name" name="txtCity" />
        <input id="btnSearch" type="submit" value="Search" />
    </div>
}
<h3>@Model.Name Temperature : @Model.Main.Temp degrees</h3>

<script>
    $(document).ready(function () {
        if (@Model.Weather.First().Id > 800)
        {
            $("#imageCarousel").carousel(2);
            $("body").css('background-color', '#696969');            
        }
        else if (@Model.Weather.First().Id == "800")
        {
            $("#imageCarousel").carousel(1);
            $("body").css('background-color', '#87ceeb');            
        }
        else if (@Model.Weather.First().Id >= "700")
        {
            $("#imageCarousel").carousel(0);
            $("body").css('background-color', '#ebb614');
        }
        else if (@Model.Weather.First().Id >= "600")
        {
            $("#imageCarousel").carousel(5);
            $("body").css('background-color', '#FFFAFA');
        }
        else if (@Model.Weather.First().Id >= "500")
        {
            $("#imageCarousel").carousel(4);
            $("body").css('background-color', '#C0C0C0');
        }
        else if (@Model.Weather.First().Id >= "300")
        {
            $("#imageCarousel").carousel(3);
            $("body").css('background-color', '#9cd3db');            
        }
        else if (@Model.Weather.First().Id >= "200")
        {
            $("#imageCarousel").carousel(6);
            $("body").css('background-color', '#4f666a');
        }     
    })
</script>

<div id="imageCarousel" class="carousel-slide-carousel-fade" data-ride="carousel" data-interval="false">
    <ol class="carousel-indicators">
        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#imageCarousel" data-slide-to="1"></li>
        <li data-target="#imageCarousel" data-slide-to="2"></li>
        <li data-target="#imageCarousel" data-slide-to="3"></li>
        <li data-target="#imageCarousel" data-slide-to="4"></li>
        <li data-target="#imageCarousel" data-slide-to="5"></li>
        <li data-target="#imageCarousel" data-slide-to="6"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/atmosphere.jpg" class="image" style="width:100%;" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/clearsky.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/clouds.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/drizzle.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/rain.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/snow.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>

        <div class="carousel-item">
            <img src="~/images/thunderstorm.jpg" class="image" alt="...">
            <h1 class="text-over-img">@Model.Name</h1>
        </div>
    </div>
    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

